<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:padding="16dp">

    <!-- Старый PIN -->
    <EditText
        android:id="@+id/oldPinEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Старый PIN"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="#222222"
        android:textColorHint="#888888"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Новый PIN -->
    <EditText
        android:id="@+id/newPinEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Новый PIN"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="#222222"
        android:textColorHint="#888888"
        app:layout_constraintTop_toBottomOf="@id/oldPinEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Кнопка подтверждения -->
    <Button
        android:id="@+id/changePinConfirmButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Изменить PIN"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6200EE"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/newPinEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
